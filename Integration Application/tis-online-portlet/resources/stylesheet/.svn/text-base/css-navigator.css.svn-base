}

table.menu
{
	margin-bottom:		10px;
}
	

input
{
	 height:			18px;
	 font-family:		arial; 
	 font-size:			12px; 
}

input.loginFormData
{
	border:			1px solid #3A4D99; 
	width:			100px;
}

input.searchButton
{
	margin-top:			4px;
	padding-left:		10px;
	width:				81px;
	border-width:		0;
	background-repeat:	no-repeat;
	cursor:				hand;
	background-image:	url(../../images/design/buttons/cb_search.gif);
}
	
input.searchFormData
{
	 border:			1px solid #3A4D99; 
	 width:				100px;
}

