}

span
{
	color:				#000000;
	text-decoration:	none; 
	font-weight:		normal;
	font-family:		arial;
}

span.errorSpan
{
	color:				red;
	font-weight:		lighter;
	font-size:			12px
}

span.footer			{	font-size:			11px;}
span.loginInfo		{	font-size:			12px;}

