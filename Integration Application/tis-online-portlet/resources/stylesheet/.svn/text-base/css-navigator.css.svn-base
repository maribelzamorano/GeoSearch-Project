a
{
	font-size:			12px;
	color:				#000000;
	text-decoration:	none; 
	font-family:		arial;
}

a:hover							{	color:				red;	background-color: #FFFFFF;}
a:focus, a:active				{	color:				red;	}
a:link							{	color:				#000000;	}
a.submenu_with_childs			{	font-weight:		bold;		}
a.submenu_with_childs_active	{	font-weight:		bold;		color: #a82836; }
a.submenu_without_childs		{	font-weight:		normal;		}
a.submenu_without_childs_active	{	font-weight:		normal;		color: #a82836; }

a.login, a.footer
{
	text-decoration:	underline; 
	font-weight:		normal;
	font-size:			10px;
	font-family:		arial;
	color:				#000000;
}

a:link.login, a:visited.login	{	color:				#000000;	}
a:hover.login					{	color:					red;	}
a:active.login					{	color:					red;	}
a:focus.login					{	color:					red;	}

table.login
{
	padding-top:		5px;
}	

table.logout
{
	padding-top:		7px;
	padding-bottom:		10px;
}	

td.submenu_icon
{
	background-image:url(../../images/submenu_icon.gif);
	background-position:0px 3px;
	background-repeat:no-repeat;
	width:10px;
}
